  "devDependencies": {
    "@norjs/pgrunner": "^1.3.2",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "jshint": "^2.9.2",
    "lint": "^1.1.2",
    "mocha": "^5.0.4",
    "mocha-lcov-reporter": "^1.3.0",
    "q": "^1.5.1"
